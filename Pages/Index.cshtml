@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>


    <button onclick="loadData()">Load Data Unsecure</button>
    <button onclick="loadDataSecurely()">Load Data Securely</button>

    <div id="responseDiv"></div>

    <script>
        function loadData() {
            document.getElementById("responseDiv").innerText = "Data loading...";
            fetch('/api/backend/secured-data')
                .then(response => response.text())
                .then(data => {
                    document.getElementById("responseDiv").innerText = data;
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }

        function loadDataSecurely() {
            document.getElementById("responseDiv").innerText = "Data loading...";
            fetch('/api/backend/secured-data-with-token')
                .then(response => response.text())
                .then(data => {
                    document.getElementById("responseDiv").innerText = data;
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    </script>

</div>